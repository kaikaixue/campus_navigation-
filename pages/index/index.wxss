/* pages/index/index.wxss */
.total {
  width: 100%;
  height: 100%;
  /* position: relative; */
  /* z-index: auto; */
}

.top {
  width: 100%;
  height: 600rpx;
  /* position: relative; */
}

.search {
  width: 80%;
  height: 80rpx;
}

.input-search {
  width: 90%;
  height: 80rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ffffff;
  background-color: #fff;
  position: absolute;
  top: 25rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding-left: 20rpx;
}

.map-main {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.map {
  width: 100%;
  height: 100%;
}

.location {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
}

.icon-location {
  width: 50rpx;
  height: 50rpx;
}

.bottom {
  width: 100%;
  height: auto;
}

.bottom-tip {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  font-size: 11pt;
  color: #1f5185;
}

.total-place {
  width: 100%;
  height: 800rpx;
}

.item-place {
  width: 100%;
  height: 200rpx;
  margin-bottom: 5rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.img-place {
  width: 40%;
  height: 100%;
  border-radius: 10rpx;
}

.item-right {
  width: 60%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-name {
  margin-left: 20rpx;
  font-family: "Arial";
  font-size: 32rpx;
  /* font-weight: 700; */
}

.img-nav {
  width: 70rpx;
  height: 70rpx;
}

.mark {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: rgba(0, 0, 0, 0.4);
}

.detail-pane {
  width: 100%;
  height: 1000rpx;
  position: fixed;
  z-index: 100;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 30rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}

.detail-name {
  font-size: 45rpx;
  font-family: 'Arial';
}

.detail-scroll {
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx;
}

.v-img {
  width: 320rpx;
  height: 100%;
  /* border-radius: 10rpx; */
  margin-right: 10rpx;
}

.detail-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.detail-info {
  margin-top: 20rpx;
  font-family: 'Arial';
  font-size: 34rpx;
}

.detail-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #387ffe;
  text-align: center;
  line-height: 100rpx;
  font-weight: 'Arial';
  font-size: 36rpx;
  color: white;
}
